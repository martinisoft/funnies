- if user_signed_in? && current_user.admin?
  = link_to "New Post", new_post_path

- posts.each do |post|
  %h3= post.title
  %p= post.body
  - if user_signed_in? && current_user.admin?
    = link_to "Edit Post", edit_post_path(post)
    = link_to "Delete Post", post_path(post), method: :delete, confirm: "Are you REALLY sure?"
